<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40dp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30dp"
        android:singleLine="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ActionButton"
                android:tag="16"
                android:text="C"
                android:onClick="Ops"
                />

            <TextView
                style="@style/NumberButton"
                android:text="/"
                android:tag="15"
                android:onClick="Ops"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ActionButton"
                android:text="7"
                android:tag="7"
                android:onClick="DigitsTag"
                />
            <TextView
                style="@style/ActionButton"
                android:text="8"
                android:onClick="DigitsTag"
                android:tag="8"
                />
            <TextView
                style="@style/ActionButton"
                android:text="9"
                android:onClick="DigitsTag"
                android:tag="9"
                />
            <TextView
                style="@style/NumberButton"
                android:text="*"
                android:tag="14"
                android:onClick="Ops"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ActionButton"
                android:text="4"
                android:tag="4"
                android:onClick="DigitsTag"

                />
            <TextView
                style="@style/ActionButton"
                android:text="5"
                android:tag="5"
                android:onClick="DigitsTag"
                />
            <TextView
                style="@style/ActionButton"
                android:text="6"
                android:tag="6"
                android:onClick="DigitsTag"
                />
            <TextView
                style="@style/NumberButton"
                android:text="-"
                android:tag="13"
                android:onClick="Ops"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ActionButton"
                android:text="1"
                android:tag="1"
                android:onClick="DigitsTag"
                />
            <TextView
                style="@style/ActionButton"
                android:text="2"
                android:tag="2"
                android:onClick="DigitsTag"
                />
            <TextView
                style="@style/ActionButton"
                android:text="3"
                android:tag="3"
                android:onClick="DigitsTag"
                />
            <TextView
                style="@style/NumberButton"
                android:text="+"
                android:tag="12"
                android:onClick="Ops"
                />
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ActionButton"
                android:text="0"
                android:tag="0"
                android:onClick="DigitsTag"
                />

            <TextView
                style="@style/ActionButton"
                android:text="."
                android:tag="10"
                android:onClick="Ops"
                />
            <TextView
                style="@style/NumberButton"
                android:text="="
                android:tag="11"
                android:onClick="Ops"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>